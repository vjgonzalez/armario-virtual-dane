<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/contenedor_item_lista">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/nombre"
        style="@style/TextoListaLeccionNombre"
        android:layout_width="@dimen/aav_ancho_leccion_item_grilla"
        android:layout_height="@dimen/aav_leccion_item_grilla_alto_nombre"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imagen"
        android:layout_width="@dimen/aav_ancho_imagen_leccion_item_grilla"
        android:layout_height="@dimen/aav_alto_imagen_leccion_item_grilla"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        app:riv_corner_radius="15dip" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/descripcion"
        style="@style/TextoListaLeccionDescripcion"
        android:layout_width="@dimen/aav_ancho_leccion_item_grilla"
        android:layout_height="@dimen/aav_leccion_item_grilla_alto_descripcion"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen" />

</android.support.constraint.ConstraintLayout>