<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/nombre_funcionalidad"
        android:layout_width="@dimen/ancho_opcion_clasificacion"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/protegida"
        app:layout_constraintLeft_toLeftOf="parent"
        android:tag="@string/tag_opcion"
        />

    <CheckBox
        android:id="@+id/protegida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/nombre_funcionalidad"
        app:layout_constraintBottom_toBottomOf="@id/nombre_funcionalidad"
        app:layout_constraintStart_toEndOf="@id/nombre_funcionalidad"
        app:layout_constraintEnd_toEndOf="parent"
        />
</android.support.constraint.ConstraintLayout>