<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/colorBotonNoSeleccionado" />
            <corners android:radius="5dp"/>
            <stroke android:color="@android:color/black" android:width="1sp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/colorBotonSeleccionado" />
            <corners android:radius="5dp"/>
            <stroke android:color="@android:color/black" android:width="1sp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>